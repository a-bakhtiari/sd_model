{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "model_improvements.schema.json",
  "title": "Model Improvements",
  "type": "object",
  "required": ["improvements", "implementation_script", "statistics", "updated_connections"],
  "properties": {
    "improvements": {"type": "object"},
    "implementation_script": {
      "type": "object",
      "required": ["additions", "removals", "new_variables"],
      "properties": {
        "additions": {"type": "array"},
        "removals": {"type": "array"},
        "new_variables": {"type": "array"}
      }
    },
    "statistics": {
      "type": "object",
      "required": ["additions_proposed", "removals_suggested", "new_variables", "total_connections_after"],
      "properties": {
        "additions_proposed": {"type": "integer"},
        "removals_suggested": {"type": "integer"},
        "new_variables": {"type": "integer"},
        "total_connections_after": {"type": "integer"}
      }
    },
    "updated_connections": {"type": "array"}
  }
}

